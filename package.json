{
  "name": "vscode-extended-actions",
  "displayName": "Extended Actions",
  "description": "Additional useful actions for VS Code",
  "version": "0.4.0",
  "publisher": "statiolake",
  "author": "statiolake",
  "license": "MIT",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "save",
    "format",
    "commands"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/statiolake/vscode-extended-actions"
  },
  "bugs": {
    "url": "https://github.com/statiolake/vscode-extended-actions/issues"
  },
  "homepage": "https://github.com/statiolake/vscode-extended-actions#readme",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-extended-actions.saveAllWithoutFormatting",
        "title": "File: Save All Without Format"
      },
      {
        "command": "vscode-extended-actions.createAndOpenFolder",
        "title": "File: Create and Open New Folder"
      },
      {
        "command": "vscode-extended-actions.closeGitDiffAndOpenOriginal",
        "title": "File: Close Git Diff and Open Original"
      },
      {
        "command": "vscode-extended-actions.exitCurrentSurrounding",
        "title": "Navigation: Exit Current Surrounding"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src",
    "pretest": "npm run compile && npm run lint",
    "test": "vscode-test",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.2",
    "eslint": "^9.36.0",
    "mocha": "^11.7.4",
    "typescript": "^5.9.3"
  }
}
